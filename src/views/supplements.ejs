        $("#supplement-side-div").append("<div class='col-md-12 supplement-div'>"+item+"</div>");
    })

    ListMed.forEach(function(item){
        $("#drug-side-div").append("<div class='col-md-12 drug-div'>"+item+"</div>");
    })
  }

