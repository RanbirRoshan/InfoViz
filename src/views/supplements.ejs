<script>
  var drug_list = []
  var sup_list  = []

  function RemoveFromSupList(val1, elem){
    sup_list = sup_list.filter(function(item){
           return item != val1;
    });
    elem.remove();

    queryMedSupplements(drug_list, sup_list);
